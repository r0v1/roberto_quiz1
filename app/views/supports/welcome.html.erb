<h1>The Supporter App</h1>

<p>current time: <%= @current_time %></p>

<p> Support Requests:
  <%= @authors_names.each do |name| %>
    <%= name %>
  <% end %>
</p>


<p>
  <%= @supports.each do |support| %>
    <%= link_to support.name, support_path(support) %>
     - - - - -
    <%= link_to "Delete", support_path(support),
        method: :delete,
        data: {confirm: "Are you sure you want to delete this request?"} %>
        <br>
  <% end %>
</p>


<h2>Database</h2>
<p> <%= @supports  %> </p>
